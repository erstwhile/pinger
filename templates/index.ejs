<!DOCTYPE html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>pinger</title>
  <link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <style> pre { max-height: 8em; min-height: 8em; overflow: scroll; font-size: 11px; }</style>
  <script src="/assets/js/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>
  <div class="container">
    <div class="page-header">
      <h1>pinger <small>A thing for making sure stuff is up.</small></h1>
    </div>
    <% urls.forEach(function(url, i){ %>
      <% var resp = responses[url.hostname]; %>
      <% if( i % 2 === 0 ){ %><div class="row"><% } %>
        <div class="span6" data-url="<%= url.hostname %>">
          <h2><%= url.hostname %></h2>
          <div class="alert alert-success">
            <strong>All Good.</strong> <%- s[Math.round(Math.random() * (s.length - 1))]%>
          </div>
          </table>
          <h5>Last Ping:</h5>
          <table class="table table-condensed table-bordered">
            <tbody>
              <tr>
                <td><small>Status Code</small></td>
                <td><small><code data-key="statusCode"><%= (resp && resp.statusCode) %></code></small></td>
              </tr>
              <tr>
                <td><small>Recieved on</small></td>
                <td><small><a href="<%= url.href %>" target="_BLANK" data-key="timestamp"><%= (resp && resp.timestamp) %></a></small></td>
              </tr>
              <tr>
                <td><small>Response Time</small></td>
                <td><small><code class="text-info" data-key="timer"><%= (resp && resp.timer && resp.timer.toFixed(4) )%></code> seconds</small></td>
              </tr>
            </tbody>
          </table>
          <h5>Headers:</h5>
          <pre class="headers" data-key="headers"><%= (resp && JSON.stringify(resp.headers, '', '  ')) %></pre>
        </div>
      <% if( (i + 1) % 2 === 0 ){ %></div><% } %>
    <% }); %>
  </div>

  <a href="https://github.com/wookiehangover/pinger"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>
  <script src="//code.jquery.com/jquery-1.8.1.min.js"></script>
  <script src="/assets/js/vendor/engine.io.js"></script>
  <script src="/assets/js/vendor/moment.min.js"></script>
  <script src="/assets/js/pinger.js"></script>
</body>
